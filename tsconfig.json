{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "ESNext",
		"target": "ESNext",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"outDir": "bin",
		"strict": true,
		"lib": ["ESNext"],
		"types": ["node"],
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["node_modules", ".vscode", "src", "lib/template"]
}
